<Window x:Class="Transportium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transportium"
        mc:Ignorable="d"
        Title="Transportium" Height="720" Width="1280"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label BorderBrush="Black" BorderThickness="1" Background="LightGray" Grid.Column="0"/>
        <Label BorderBrush="Black" BorderThickness="1" Background="LightGray" Grid.Column="1" Height="200" VerticalAlignment="Bottom"/>
        <Label BorderBrush="Black" BorderThickness="1" Background="LightGray" Grid.Column="2"/>
    </Grid>
</Window>
